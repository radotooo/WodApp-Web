@model Wod.Models.WodApp.VIewModels.Post.IndexPostViewModel

@{
    ViewData["Title"] = "Home Page";

}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/v4-shims.css">

@{
    foreach (var post in Model.Posts)
    {

        <div class="container">
            <div class="row">
                <div class="span8 ">
                    <div class="row d-flex justify-content-center">
                        <div class="span8">
                            <h4><strong><a asp-controller="Post" asp-action="ShowPost" asp-route-id="@post.Id" >@post.Tittle</a></strong></h4>
                        </div>
                    </div>
                    <div class="row">

                        <div style="text-align: center;">
                            <img src="@post.PictureUrl" style="max-width: 50%; height: auto;" alt="FYI, image alt text is required" />
                        </div>


                    </div>
                    <div class="row">
                        <div class="span8">
                            <p></p>
                            <p>
                                <i class="fa fa-user"></i> by <a href="#">@post.UserUsernameName</a>
                                | <i class="fa fa-calendar" style="color:Highlight"></i> @post.CreatedOn.ToString("MMMM dd yyyy")
                                | <i class="fa fa-comment"></i> <a href="#">Comments @post.Comments.Count()</a>
                                | <i class="fas fa-share"></i> <a href="#">39 Shares</a>
                                | <i class="fas fa-tags"></i> Tags : <a href="#"><span class="label label-info">@post.CategoryName</span></a>
                                <i class="fas fa-thumbs-up" style="color:Highlight"></i>
                                <i class="fas fa-thumbs-down" style="color:Highlight"></i>
                                @*<a href="#"><span class="label label-info">Bootstrap</span></a>
                                    <a href="#"><span class="label label-info">UI</span></a>
                                    <a href="#"><span class="label label-info">growth</span></a>*@
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
    }
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>






