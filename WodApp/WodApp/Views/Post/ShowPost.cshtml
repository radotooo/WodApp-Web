
@model Wod.Models.WodApp.VIewModels.Post.PostVIewModel

@{
    ViewData["Title"] = "Home Page";
}



<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/v4-shims.css">
<!------ Include the above in your HEAD tag ---------->

<div class="container">
    <div class="row" >
        <div class="span8 ">
            <div class="row d-flex justify-content-center" >
                <div class="span8" >
                    <h4><strong><a href="#">@Model.Tittle</a></strong></h4>
                </div>
            </div>
            <div class="row">

                <div style="text-align: center;">
                    <img src="@Model.PictureUrl" style="max-width: 50%; height: auto;" alt="FYI, image alt text is required" />
                </div>


            </div>
            <div class="row">
                <div class="span8">
                    <p></p>
                    <p>
                        <i class="fa fa-user"></i> by <a href="#">@Model.UserUsernameName</a>
                        | <i class="fa fa-calendar" style="color:Highlight"></i> @Model.CreatedOn.ToString("MMMM dd yyyy")
                        | <i class="fa fa-comment"></i> <a href="#">@Model.Comments.Count()</a>
                        | <i class="fas fa-share"></i> <a href="#">39 Shares</a>
                        | <i class="fas fa-tags"></i> Tags : <a href="#"><span class="label label-info">@Model.CategoryName</span></a>
                        <i class="fas fa-thumbs-up" style="color:Highlight"></i>
                        <i class="fas fa-thumbs-down" style="color:Highlight"></i>
                        @*<a href="#"><span class="label label-info">Bootstrap</span></a>
                        <a href="#"><span class="label label-info">UI</span></a>
                        <a href="#"><span class="label label-info">growth</span></a>*@
                    </p>
                </div>
            </div>
        </div>
    </div>
    

    
    

    
    
</div>

